import cv2
from deepface import DeepFace
import pandas as pd
from datetime import datetime

# Initialize video feed
cap = cv2.VideoCapture(0)
data = []

while True:
    ret, frame = cap.read()
    if not ret:
        break

    try:
        # Analyze frame using DeepFace
        result = DeepFace.analyze(frame, actions=['age', 'gender'], enforce_detection=False)

        for face in result:
            age = face['age']
            gender = face['gender']
            x, y, w, h = face['region']['x'], face['region']['y'], face['region']['w'], face['region']['h']

            # Draw rectangle around face
            color = (0, 255, 0) if age <= 60 else (0, 0, 255)
            label = f"{gender}, {age}"
            cv2.rectangle(frame, (x, y), (x + w, y + h), color, 2)
            cv2.putText(frame, label, (x, y - 10), cv2.FONT_HERSHEY_SIMPLEX, 0.7, color, 2)

            # Log senior citizens
            if age > 60:
                timestamp = datetime.now().strftime("%Y-%m-%d %H:%M:%S")
                data.append({"Age": age, "Gender": gender, "Timestamp": timestamp})

    except Exception as e:
        print(f"Error: {e}")

    cv2.imshow("Senior Citizen Detection", frame)

    if cv2.waitKey(1) & 0xFF == ord('q'):
        break

# Release resources
cap.release()
cv2.destroyAllWindows()

# Save to CSV
df = pd.DataFrame(data)
df.to_csv("senior_citizens.csv", index=False)
